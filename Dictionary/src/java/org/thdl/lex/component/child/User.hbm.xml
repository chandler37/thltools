<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
    
<hibernate-mapping>



<class name="org.thdl.lex.component.child.User" table="Users">
	<id name="id" type="java.lang.Integer" column="id">
		<generator class="native" />
	</id>
	<property name="metaId" type="java.lang.Integer" column="metaId" not-null="true" length="11"/>
	<property name="userRoleList" type="java.lang.String" column="userRoleList" length="255"/>
	<property name="username" type="java.lang.String" column="username" not-null="true" length="255"/>
	<property name="password" type="java.lang.String" column="password" not-null="true" length="255"/>
	<property name="firstname" type="java.lang.String" column="firstname" not-null="true" length="255"/>
	<property name="lastname" type="java.lang.String" column="lastname" not-null="true" length="255"/>
	<property name="middlename" type="java.lang.String" column="middlename" not-null="true" length="255"/>
	<property name="title" type="java.lang.String" column="title" not-null="true" length="255"/>
	<property name="email" type="java.lang.String" column="email" not-null="true" length="255"/>

	<!-- associations -->

</class>
</hibernate-mapping>
