<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

	<hibernate-mapping>

<class name="org.thdl.lex.component.child.LiterarySource" table="LiterarySources">
	<id name="id" type="java.lang.Integer" column="id">
		<generator class="native"/>
	</id>
	<property name="literaryPeriod" type="java.lang.Integer" column="literaryPeriod" length="11"/>
	<property name="literaryGenre" type="java.lang.Integer" column="literaryGenre" length="11"/>
	<property name="literaryForm" type="java.lang.Integer" column="literaryForm" length="11"/>
	<property name="author" type="java.lang.Integer" column="author" length="11"/>
	<property name="sourceNormalizedTitle" type="java.lang.String" column="sourceNormalizedTitle" length="65535"/>
	<property name="tibetanDate" type="java.lang.String" column="tibetanDate" length="65535"/>
	<property name="internationalDate" type="java.lang.String" column="internationalDate" length="65535"/>
	<property name="edition" type="java.lang.String" column="edition" length="65535"/>
	<property name="publisher" type="java.lang.String" column="publisher" length="65535"/>
	<property name="isbn" type="java.lang.String" column="isbn" length="65535"/>
	<property name="yearPublished" type="java.sql.Timestamp" column="yearPublished" length="14"/>
	<property name="volumeNumber" type="java.lang.Integer" column="volumeNumber" not-null="true" length="11"/>
	<property name="pagination" type="java.lang.String" column="pagination" length="65535"/>

	<!-- associations -->

</class>

</hibernate-mapping>
